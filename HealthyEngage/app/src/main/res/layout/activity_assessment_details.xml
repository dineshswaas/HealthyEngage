<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_non_pressed"
    tools:context=".AssessmentDetailsActivity">

    <LinearLayout
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_above="@+id/buttonlayout"
        android:layout_width="match_parent"
        android:background="@color/gray_non_pressed"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:textColor="@color/black"
            android:text="Nausea" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content"
            android:text="Description" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            app:cardCornerRadius="6dp"
            app:cardElevation="20dp">

            <RelativeLayout
                android:id="@+id/textParentView"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/donut_progress"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:text="Do you have nausea ?"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_non_pressed">

                    </View>

                    <EditText
                        android:id="@+id/textEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:padding="25dp"
                        android:background="@color/transparent"
                        android:hint="Tap to answer" />


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/booleanParentView"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/donut_progress"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/booleanquestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:text="@string/not_available"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_non_pressed">

                    </View>

                    <RadioGroup
                        android:id="@+id/radiogroup"
                        android:layout_width="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/rpositiveButton"
                            android:layout_width="match_parent"
                            android:padding="18dp"
                            android:text="@string/not_available"
                            android:layout_height="match_parent">
                        </RadioButton>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray_non_pressed">

                        </View>

                        <RadioButton
                            android:id="@+id/radiobuttonnegative"
                            android:layout_width="match_parent"
                            android:padding="18dp"
                            android:text="@string/not_available"
                            android:layout_height="match_parent">
                        </RadioButton>
                    </RadioGroup>




                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/pickerParentView"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/donut_progress"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pickerquestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:text="@string/not_available"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_non_pressed">

                    </View>

                    <Spinner
                        android:id="@+id/pickerSpinner"
                        android:padding="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/buttonlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">


        <TextView
            android:id="@+id/textView7"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:padding="10dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white" />
    </RelativeLayout>


</RelativeLayout>